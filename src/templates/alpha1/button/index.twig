{% set component = {
    'namespace': 'button'
} %}

{% extends '_pattern/base' %}

{% set text = text|default(null) %}
{% set title = title|default(null) %}
{% set url = url|default(null) %}
{% set target = target|default(null) %}
{% set icon = icon|default(null) %}

{% block component %}
    <a class="{{ prefix }} {{ style ?? 'inline-block no-underline py-3 px-5 bg-gray-100' }}" href="{{ url }}">
        {{ text }}
    </a>
{% endblock %}

