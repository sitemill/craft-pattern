{#---
title: Spacer
description: >
    Space between things.
variables:
    - name: Size
      type: string
---#}
{% extends '_pattern/base' %}

{% set component = {
    'namespace': 'spacer'
} %}

{% set size = size|default('md') %}

{% switch size %}
    {% case 'sm' %}
        {% set defaultStyle = 'h-6' %}
    {% case 'md' %}
        {% set defaultStyle = 'h-10' %}
    {% case 'lg' %}
        {% set defaultStyle = 'h-14' %}
{% endswitch %}

{% block component %}
    <div class="{{ prefix }} {{ style ?? defaultStyle }}"></div>
{% endblock %}
